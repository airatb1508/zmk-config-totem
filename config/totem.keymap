                 &kp UNDER          &kp F2  &kp F3    &kp F4      &kp PLUS       &kp MINUS  &kp EQUAL  &kp GRAVE  &kp LEFT_BRACKET      &kp RIGHT_BRACKET
                 &kp EXCL           &kp AT  &kp HASH  &kp DOLLAR  &kp PERCENT    &kp CARET  &kp AMPS   &kp STAR   &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS
&mt LCTRL TILDE  &mt LEFT_SHIFT N1  &kp N2  &kp N3    &kp N4      &kp N5         &kp N6     &kp N7     &kp N8     &kp N9                &mt RIGHT_SHIFT N0     &kp SINGLE_QUOTE
                                            &trans    &trans      &trans         &trans     &trans     &trans
            >;
        };

        nav {
            bindings = <
        &trans    &trans  &trans  &trans     &trans         &trans            &trans            &kp LS(LA(N5))  &trans             &kp UP
        &kp HOME  &trans  &trans  &kp RIGHT  &trans         &kp LA(LC(LEFT))  &kp LA(LC(DOWN))  &kp LA(LC(UP))  &kp LA(LC(RIGHT))  &trans
&trans  &trans    &trans  &trans  &trans     &kp LEFT       &kp DOWN          &trans            &trans          &trans             &kp BACKSLASH  &trans
                          &trans  &trans     &lt 3 SPACE    &trans            &trans            &trans
            >;
        };

        bt {
            bindings = <
            &trans  &bt BT_SEL 3  &trans  &trans  &bt BT_SEL 2    &bt BT_SEL 4  &trans        &trans  &trans  &bt BT_SEL 1
            &trans  &trans        &trans  &trans  &trans          &trans        &trans        &trans  &trans  &trans
&bt BT_CLR  &trans  &trans        &trans  &trans  &trans          &trans        &bt BT_SEL 0  &trans  &trans  &trans        &bt BT_CLR
